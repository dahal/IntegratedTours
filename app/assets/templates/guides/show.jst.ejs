<div class="clearfix">
  <div class="avatar">
    <img src="<%= model.gravatar_url %>"></img>
  </div>

  <div class="details">
    <div class="name"><%= model.name %></div>
    <div class="address"><%= model.address %></div>
    <div class="contact">
      <a href="mailto:<%= model.email %>">
        <span class="icon fa fa-send"></span>
        Send a Message
      </a>
    </div>
  </div>
</div>
